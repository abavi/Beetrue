<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/content_description_logo"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/user_icon"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>
        <TextView
            android:id="@+id/txtWelcomeBack"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back [USER]!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTES"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtToDoList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TO-DO LIST"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginHorizontal="1dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topText"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        >

        <ImageView
            android:id="@+id/notesVector"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_notes_24"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/accent_color"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>
        <ImageView
            android:id="@+id/toDoListVector"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_list_24"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/accent_color"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topDashboard"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="TIMER"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txtHabits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="HABITS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topDashboard"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/pomodoroVector"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_timer_24"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/accent_color"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>
        <ImageView
            android:id="@+id/habitsVector"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_repeat_24"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/accent_color"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottomDashboard"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/accent_color"
            android:textColor="@color/black"
            android:text="Settings"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            />

    </LinearLayout>
</RelativeLayout>